type User {
  id: ID! @id @unique
  auth0id: String @unique
  email: String
  name: String
  todoes: [ToDo!]! @relation(name: "Owner")
  labels: [Label!]!
  sharedWith: [ToDo!]! @relation(name: "SharedWith")
}

type ToDo {
  id: ID! @id @unique
  title: String
  description: String
  isDone: Boolean! @default(value: false)
  label: Label @relation(link: INLINE)
  color: Color @relation(link: INLINE)
  user: User! @relation(name: "Owner")
  sharedWith: [User!]! @relation(name: "SharedWith")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Label {
  id: ID! @id @unique
  name: String @unique
  todo: ToDo
  user: User!
}

type Color {
  id: ID! @id @unique
  name: String
  colorCode: String
}
