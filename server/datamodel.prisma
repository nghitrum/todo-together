
type User {
  id: ID! @unique
  auth0id: String @unique
  todoes: [ToDo!]!
  labels: [Label!]!
}

type ToDo {
  id: ID! @unique
  title: String
  description: String
  isDone: Boolean! @default(value: "false")
  label: Label
  color: Color
  user: User!
}

type Label {
  id: ID! @unique
  name: String @unique
  todo: ToDo
  user: User!
}

type Color {
  id: ID! @unique
  name: String
  colorCode: String
}
